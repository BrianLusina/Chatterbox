<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/food_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    card_view:contentPadding="10dp"
    android:layout_margin="@dimen/chatfrag_item_card_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="match_parent">

        <!--account image-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chatfrag_item_img"
            android:layout_width="36dp"
            android:src="@drawable/ic_account_circle_black_36dp"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/chatfrag_item_lastchatter_img"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        android:padding="10dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chatsfrag_whochat_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/chatsfrag_whochat_message"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/chatsfrag_last_msg_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/chatsfrag_last_message"
            android:textStyle="normal"/>
    </LinearLayout>

        <TextView
            android:id="@+id/chatsfrag_timestamp_id"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/chatsfrag_timestamp"
            android:textStyle="normal"/>
    </LinearLayout>
</android.support.v7.widget.CardView>