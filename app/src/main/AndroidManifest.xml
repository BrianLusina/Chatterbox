<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.chatterbox.chatterbox">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="41f11c4d0f34030da023daca96924eaff1547a35" />

        <!--splash screen-->
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".login_signup.LogSignActivity"
            android:configChanges="screenSize|orientation" />

        <!--sign in activity-->
        <activity android:name=".SignInActivity" />

        <!--Home activity-->
        <activity
            android:name=".mainpack.HomeActivity"
            android:configChanges="orientation|screenSize"/>

        <!--main activity-->
        <activity android:name=".mainpack.MainActivity">
            <intent-filter>
                <action android:name="com.chatterbox.chatterbox.MAINACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!--Reset User password-->
        <activity
            android:name=".login_signup.ResetPasswordActivity"
            android:configChanges="orientation|screenSize"/>

        <!--SERVICES-->
        <service
            android:name=".ChatterBoxMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name=".ChatterBoxInstanceIdService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
